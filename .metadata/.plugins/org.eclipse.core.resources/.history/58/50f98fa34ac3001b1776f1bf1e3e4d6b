package day03;

import java.util.Scanner;

public class test {
	
	public static void main(String[] args) {
		
		/*
		 * + - + - + - 
		 * 
		 * 숫자입력 6
		 * 
		 * 숫자 3 + - +
		 * 
		 * while 문으로 
		 */
		
		Scanner sc = new Scanner(System.in);
		System.out.println("숫자를 입력하세요");
		int num = Integer.parseInt(sc.nextLine());
		
		int i = num ;
		while (i<=num) {
			
			if(i%2==0) {
				System.out.println("-"+i);
			}else
				System.out.println("+"+i);
				
			i++;
		}
		
		
		
	}

}
