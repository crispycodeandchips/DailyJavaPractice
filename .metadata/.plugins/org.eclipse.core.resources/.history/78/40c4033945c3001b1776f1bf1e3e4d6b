package day03;
//3번문제

/*
 * While 방식으로 풀 것.
 * 외부에서 숫자를 입력받아, 1부터 해당 입력 숫자까지의 수를 모두 나열하여
 * 
 * ex) input su
 *        5
 * 1-2+3-4+5=3 방식의 텍스트로 출력하라.
 */
public class WhileTest1 {
	public static void main(String[] args) {


		int i = 2;
		String result="1";
		int tot= 1;
		
		//초기값 선언 / 조건 / 증가를 해서 출력할건지, 출력을 하고 증가할건지
		while(i<=) {

			if(i%2==0)
				result +="-"+i;
			tot -= i;
			
		}else {
			result += "+"+i;
			tot += i;
		}
		i++;
	}

}
